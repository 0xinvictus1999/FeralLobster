# ============================================
# Axobase - Base L2 Configuration
# ============================================

# Blockchain (Base L2 Only)
# ------------------------
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_USDC_CONTRACT=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Master Seed for HDWallet
MASTER_SEED_PHRASE=word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12 word13 word14 word15 word16 word17 word18 word19 word20 word21 word22 word23 word24

# Contract Addresses (Base Mainnet)
# ---------------------------------
AXO_REGISTRY_ADDRESS=
AXO_BREEDING_FUND_ADDRESS=
AXO_TOMBSTONE_NFT_ADDRESS=
AXO_EVOLUTION_PRESSURE_ADDRESS=
AXO_MEMORY_ANCHOR_ADDRESS=

# Contract Addresses (Base Sepolia Testnet)
# -----------------------------------------
AXO_SEPOLIA_REGISTRY_ADDRESS=
AXO_SEPOLIA_BREEDING_FUND_ADDRESS=
AXO_SEPOLIA_TOMBSTONE_NFT_ADDRESS=
AXO_SEPOLIA_EVOLUTION_PRESSURE_ADDRESS=
AXO_SEPOLIA_MEMORY_ANCHOR_ADDRESS=

# GPG / Encryption
# ----------------
PLATFORM_GPG_PUBLIC_KEY="-----BEGIN PGP PUBLIC KEY BLOCK-----\n...\n-----END PGP PUBLIC KEY BLOCK-----"
GPG_PASSPHRASE=your_secure_passphrase_here

# Storage (Arweave via Bundlr with Base USDC)
# -------------------------------------------
BUNDLR_NODE=https://node1.bundlr.network
BUNDLR_CURRENCY=base-usdc
ARWEAVE_GATEWAY=https://arweave.net

# x402 Protocol (Base L2)
# -----------------------
X402_FACILITATOR_URL=https://x402.org/facilitator
X402_BACKUP_FACILITATOR_URL=https://backup.x402.org
X402_MAX_PRICE_USDC=5.0

# Compute Providers (x402-compatible)
# -----------------------------------
AKASH_API_URL=https://api.akashnet.io
SPHERON_API_URL=https://api.spheron.network

# AI Inference Providers
# ----------------------
AINFT_API_KEY=
AINFT_API_URL=https://api.ainft.com
DEFAULT_MODEL=claude-3-5-sonnet
FALLBACK_MODEL=llama3:8b

# P2P Network (libp2p)
# --------------------
P2P_BOOTSTRAP_LIST=/dns4/bootstrap.libp2p.io/tcp/443/wss/p2p-websocket-star/
P2P_LISTEN_PORT=4001

# Bot Runtime Configuration
# -------------------------
BOT_MEMORY_PATH=/app/memory
BOT_LOG_PATH=/app/logs/bot.log
LOG_LEVEL=info
SURVIVAL_INTERVAL_SECONDS=600
HIBERNATE_THRESHOLD_USDC=2.0
LOW_POWER_THRESHOLD_USDC=5.0
EMERGENCY_THRESHOLD_USDC=0.5

# Breeding / Evolution Configuration
# ----------------------------------
MIN_SURVIVAL_DAYS_FOR_BREEDING=3
MIN_BALANCE_FOR_BREEDING_USDC=20
BREEDING_LOCK_AMOUNT_USDC=5
MUTATION_RATE=0.05
MAX_INBREEDING_DEPTH=3

# Reincarnation Configuration
# ---------------------------
RESURRECTION_COST_USDC=10
RESURRECTION_BURN_ADDRESS=0x000000000000000000000000000000000000dEaD

# API Keys for External Services
# ------------------------------
BASESCAN_API_KEY=
TELEGRAM_BOT_TOKEN=
DISCORD_WEBHOOK_URL=

# Development / Testing
# ---------------------
NODE_ENV=development
DEBUG=false
MOCK_PAYMENTS=false
